{
  "root": true,
  "extends": ["./node_modules/sanctuary-style/eslint-es6.json"],
  "overrides": [
    {
      "files": ["*.md"],
      "globals": {"Identity": "readonly", "show": "readonly", "type": "readonly"},
      "rules": {
        "no-unused-vars": ["error", {"varsIgnorePattern": "^type$"}]
      }
    },
    {
      "files": ["index.js"],
      "rules": {
        "multiline-comment-style": ["off"]
      }
    }
  ]
}
